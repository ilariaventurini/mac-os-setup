    "width": 120,
    "align": "left",
    "bordered": true
  },
  
  // exit touchbar
  {
    "type": "exitTouchbar",
    "title": "",
    "image": {
      "filePath": "~/Library/Application Support/MTMR/close.png"
    },
    "width": 38,
    "align": "left",
    "bordered": true
  },

  // brightness - and +
  { 
    "type": "brightnessDown", 
    "width": 38, 
